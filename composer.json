{
  "name": "sad_spirit/quickform2-json-renderer",
  "type": "library",
  "description": "A renderer for pear/HTML_QuickForm2 serializing the form so that it can be rebuilt on client side",
  "keywords": ["forms", "javascript", "pear", "quickform", "JSON"],
  "license": "BSD-2-Clause",
  "homepage": "https://github.com/sad-spirit/quickform2-json-renderer/",
  "authors": [
    {
      "name":     "Alexey Borzov",
      "email":    "avb@php.net"
    }
  ],
  "support": {
      "issues":   "https://github.com/sad-spirit/quickform2-json-renderer/issues"
  },
  "require": {
    "php":                       ">=7.4.0",
    "pear/html_quickform2":      "^2.3.2"
  },
  "require-dev":  {
    "phpunit/phpunit":           "^9.0",
    "vimeo/psalm":               "^5.14",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "sad_spirit\\html_quickform2\\json_renderer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "sad_spirit\\html_quickform2\\json_renderer\\tests\\": "tests/"
    }
  }
}
